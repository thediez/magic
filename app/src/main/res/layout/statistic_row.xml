<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardTest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_centerHorizontal="true"
    android:innerRadius="0dp"
    android:shape="ring"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:thicknessRatio="1.9"
    app:cardCornerRadius="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/statisticTaskName"
            android:layout_width="@dimen/_206sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:gravity="bottom"
            android:paddingLeft="@dimen/_18sdp"
            android:text="Project 1,"
            android:textColor="#50B7D8"
            android:fontFamily="@font/barlow_semi_bold"
            android:textSize="@dimen/_10sdp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/statisticStepName"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/statisticStepName"
            android:layout_width="@dimen/_206sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:paddingLeft="@dimen/_18sdp"
            android:text="Task 1 UID xxx"
            android:fontFamily="@font/barlow_semi_bold"
            android:textSize="@dimen/_9sdp"
            android:singleLine="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statisticTaskName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textHour"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:background="@drawable/fields_clock_shape"
            android:gravity="center"
            android:text="05"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textDot"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textMinute"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/fields_clock_shape"
            android:gravity="center"
            android:text="05"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textDot"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_22sdp"
            android:gravity="center"
            android:text=":"
            android:textColor="#5C94C7"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textMinute"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textHour"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/statistic_card_clock_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
